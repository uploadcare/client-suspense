{
  "env": { "browser": true, "node": true, "jest": true },
  "extends": ["standard", "eslint-config-standard-jsx"],
  "plugins": [
    "react-hooks"
  ],
  "rules": {
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn"
  },
  "ignorePatterns": ["node_modules/", "dist/"]
}
